{#{% use 'admin/blocks.html.twig' %}#}

{% extends 'AdminBundle:default:index.html.twig' %}

{% form_theme form 'admin/fields.html.twig' %}

{% block menu_swd_admin_user %}active{% endblock %}
{% block menu_swd_admin_user_list %}active{% endblock %}

{% block page_title %}Users{% endblock %}

{% block body %}

    <form action="{{ path('swd_admin_user', {'id': id}) }}" method="post" id="userForm">
        <div class="card">
            <div>
                {{ form_errors(form) }}
            </div>
            <div class="header">
                <h2>User Form</h2>
            </div>
            <div class="body">
                {{ form_row(form.username, {'attr': {'readonly': readonly}}) }}
                {{ form_row(form.name) }}
                {% if (readonly == false) %}
                    {{ form_row(form.password) }}
                {% endif %}
                {{ form_row(form.save) }}
                {{ form_row(form._token) }}
            </div>
        </div>
    </form>

{% endblock %}
